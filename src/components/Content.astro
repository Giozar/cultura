---
import Facts from "./Facts.astro";

const { datos } = Astro.props;
const {
  titulo,
  tituloComplemento,
  contenido0,
  contenido1,
  contenido2,
  contenido3,
  imagen,
} = datos;
---

<section
  class="bg-zinc-800 bg-gradient-to-t from-zinc-800 to-[#2726263a] bg-opacity-20 w-full h-full space-y-5"
>
  <h1
    class="text-4xl text-center py-4 font-semibold text-[#e5e3dc]"
    transition:animate="slide"
  >
    <strong class="text-6xl font-medium block text-[#b0aa94]">{titulo}</strong>
    {tituloComplemento}
  </h1>

  <nav>
    <article>
      <div class="grid grid-cols-3 justify-items-center">
        <Facts id="btnContenido1" section={contenido1.titulo} icon="historic" />
        <Facts id="btnContenido2" section={contenido2.titulo} icon="peace" />
        <Facts id="btnContenido3" section={contenido3.titulo} icon="feature-highlight" />
      </div>
    </article>
  </nav>

  <article
    class="grid grid-cols-1 sm:grid-cols-2 justify-items-center p-10 space-y-4"
  >
    <section>
      <div
        id="contenido0"
        class="text-[#e5e3dc] text-pretty font-serif text-lg font-medium space-y-4 overflow-hidden"
      >
      <h2 id="tituloSeccion" class="text-2xl text-[#e5e3dc] font-semibold">
        {contenido0.titulo}:
      </h2>
      
        {
          contenido0.parrafos.map((parrafo: string, index: number) => (
            <p>{parrafo}</p>
          ))
        }
      </div>

      <div
        id="contenido1"
        class="text-[#e5e3dc] text-pretty font-serif text-lg font-medium space-y-4 hidden overflow-hidden"
      >
      <h2 id="tituloSeccion" class="text-2xl text-[#e5e3dc] font-semibold">
        {contenido1.titulo}:
      </h2>

        {
          contenido1.parrafos.map((parrafo: string, index: number) => (
            <p>{parrafo}</p>
          ))
        }
      </div>

      <div
        id="contenido2"
        class="text-[#e5e3dc] text-pretty font-serif text-lg font-medium space-y-4 hidden overflow-hidden"
      >
      <h2 id="tituloSeccion" class="text-2xl text-[#e5e3dc] font-semibold">
        {contenido2.titulo}:
      </h2>

        {
          contenido2.parrafos.map((parrafo: string, index: number) => (
            <p>{parrafo}</p>
          ))
        }
      </div>

      <div
        id="contenido3"
        class="text-[#e5e3dc] text-pretty font-serif text-lg font-medium space-y-4 hidden overflow-hidden"
      >
      <h2 id="tituloSeccion" class="text-2xl text-[#e5e3dc] font-semibold">
        {contenido3.titulo}:
      </h2>

        {
          contenido3.parrafos.map((parrafo: string, index: number) => (
            <p>{parrafo}</p>
          ))
        }
      </div>
    </section>

    <figure class="max-h-[700px] w-3/4">
      <img
        alt="imagen de museo revolucion"
        src={`images/${imagen}.jpg`}
        class="h-full w-full object-cover transition duration-1000 rounded-2xl"
        transition:name=`img-${imagen}`
      />
    </figure>
  </article>
</section>
