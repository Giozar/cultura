---
import Content from "../components/Content.astro";
import Layout from "../layouts/Layout.astro";
const tema = Astro.url.pathname.replace('/','');
---

<Layout title="Evento">
    <Content
    titulo="Evento cultural", 
    tituloComplemento="Feria de libro",
    seccion1="Historia",
    seccion2="Significado",
    seccion3="Características",
    introduccion={[
        "Es un evento cultural que se realiza en la ciudad de México.",
        "Es una feria de libro que se realiza en el mes de octubre.",
        "Es un evento que reúne a escritores, editores y lectores."
    ]},
    contenido1={[
      "Es el contenido 1 1",
      "Es el contenido 1 2",
      "Es el contenido 1 3"
    ]},
    contenido2={[
      "Es el contenido 2 1",
      "Es el contenido 2 2",
      "Es el contenido 2 3"
    ]},
    contenido3={[
      "Es el contenido 3 1",
      "Es el contenido 3 2",
      "Es el contenido 3 3"
    ]},
    imagen=`${tema}/feria` 
  />
</Layout>